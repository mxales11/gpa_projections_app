<%= form_tag(calculateGpaNeededForTargetCumulativeGpa_path, :remote => true) do %>

	<%= text_field_tag :cumulative_gpa, nil, :placeholder => "Cumulative GPA" %>
	<br></br>
	<%= text_field_tag :credits_earned, nil, :placeholder => "Credits earned" %>
	<br></br>
	<%= text_field_tag :desired_cumulative_gpa, nil, :placeholder => "Target cumulative GPA" %>
	<br></br>
	<%= text_field_tag :credits_taken_this_semester, nil, :placeholder => "Credits earned this term" %>

	<div id= "gpa_for_target_cumulative_gpa"></div>
	<br>
		<%= submit_tag "Calculate GPA you need this semester", class: "btn btn-primary"%>
	<br>

<% end %>



